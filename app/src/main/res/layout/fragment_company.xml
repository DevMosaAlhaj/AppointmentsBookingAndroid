<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomePagerFragments.CompanyFragment"
    android:orientation="vertical"
    android:weightSum="3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/company"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/before"
            android:scaleType="centerCrop"
            android:layout_gravity="top|start"
            android:id="@+id/fragment_company_iv_back"
            android:padding="5dp"/>

    </FrameLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2"
       android:orientation="vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:textSize="22sp"
           android:layout_gravity="start"
           android:layout_marginTop="15dp"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:id="@+id/fragment_company_tv_name"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:textSize="17sp"
           android:layout_margin="15dp"
           android:id="@+id/fragment_company_tv_description"/>



       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:textSize="17sp"
           android:drawableStart="@drawable/email"
           android:drawablePadding="5dp"
           android:layout_margin="15dp"
           android:id="@+id/fragment_company_tv_email"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:textSize="17sp"
           android:drawableStart="@drawable/phone"
           android:drawablePadding="5dp"
           android:layout_margin="15dp"
           android:id="@+id/fragment_company_tv_phone"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="20dp"
           android:gravity="center"
           android:layout_gravity="center">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="17sp"
               android:text="Price \n2370$"
               android:padding="5dp"
               android:layout_marginStart="15dp"
               android:layout_marginEnd="15dp"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="17sp"
               android:text="Rating "
               android:padding="5dp"
               android:layout_marginStart="15dp"
               android:layout_marginEnd="0dp"
               />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/star"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/star"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/star"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/star"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="70dp"
           android:weightSum="5">
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/fragment_company_bt_book"
               android:layout_width="0dp"
               android:layout_weight="4"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:background="@drawable/app_button_background"
               android:text="@string/book_now"
               android:textAllCaps="false"
               android:textColor="@color/white"
               android:textSize="19sp" />

           <ImageView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_gravity="center"
               android:layout_marginEnd="10dp"
               android:src="@drawable/place"
               android:padding="5dp"
               android:background="@drawable/outline_button_background"
               android:id="@+id/fragment_company_iv_location"/>

       </LinearLayout>


   </LinearLayout>

</LinearLayout>