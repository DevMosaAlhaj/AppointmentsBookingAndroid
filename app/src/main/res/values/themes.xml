<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppointmentsBooking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/darker_gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item  name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Customize your theme here. -->
    </style>



    <style name="MyPickerDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/material_orange</item>
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyFloatingActionButton" parent="Widget.Design.FloatingActionButton">
      <item name="colorSecondary">@color/white</item>

    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:subtitleTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:background">@color/material_orange</item>
    </style>

</resources>